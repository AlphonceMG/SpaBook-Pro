<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Signup</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <h3>Admin Signup</h3>
    <form action="/admin/signup" method="POST">
        <div class="mb-3">
            <label for="adminEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="adminEmail" name="adminEmail" placeholder="Email" required>
            <div class="col-auto">
                <span id="emailHelpInline" class="form-text">
                    Email is required.
                </span>
            </div>
        </div>
        <div class="mb-3">
            <label for="adminPassword" class="form-label">Password</label>
            <input type="password" class="form-control" id="adminPassword" name="adminPassword" placeholder="Password" required>
            <div class="col-auto">
                <span id="passwordHelpInline" class="form-text">
                    Must be 8-20 characters long and contain one special character.
                </span>
            </div>
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
            <div class="col-auto">
                <span id="confirmPasswordHelpInline" class="form-text text-danger">
                    <% if (messages.error && messages.error.includes('Passwords do not match')) { %>
                        Passwords do not match.
                    <% } %>
                </span>
            </div>
        </div>
         <!-- Display flash messages -->
        <% if (messages.error && messages.error.length > 0) { %>
          <div class="alert alert-danger">
            <% messages.error.forEach(function(error) { %>
              <%= error %><br>
            <% }); %>
          </div>
        <% } %>

        <% if (messages.success && messages.success.length > 0) { %>
          <div class="alert alert-success">
            <% messages.success.forEach(function(success) { %>
              <%= success %><br>
            <% }); %>
          </div>
        <% } %>
        <div class="d-grid mt-3">
            <button type="submit" class="btn btn-primary form-control">Submit</button>
        </div>
        <div class="mt-3 text-center">
            <p>Already have an account? <a href="/login">Click here to login</a></p>
        </div>
    </form>
</div>
</body>
</html>

