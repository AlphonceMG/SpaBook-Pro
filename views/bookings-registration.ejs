<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookings Registration</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet"/>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style> 
        /* Custom styles for the registration form */
        .vh-100 {
            height: 100vh;
        }

        .gradient-custom {
            background: linear-gradient(rgba(0, 0, 0, 0.5), #009688);
            background-size: cover;
            height: 100vh;
        }

        .card-registration {
            border-radius: 15px;
        }

        .form-label {
            color: #333;
        }

        .form-control-lg {
            border-color: #ccc;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        /* Additional custom styles */
        .custom-form-check-label {
            margin-right: 20px;
        }
    </style>
</head>
<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Bookings Registration</h3>
                            <form action="/bookings/registration" method="POST">
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="text" id="firstName" name="firstName" class="form-control form-control-lg" required />
                                            <label class="form-label" for="firstName">First Name</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="text" id="lastName" name="lastName" class="form-control form-control-lg" required />
                                            <label class="form-label" for="lastName">Last Name</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control form-control-lg" required />
                                            <label for="phoneNumber" class="form-label">Phone Number</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="email" id="emailAddress" name="email" class="form-control form-control-lg" />
                                            <label class="form-label" for="emailAddress">Email</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                  
                                    <div class="col-md-6 mb-4">
                                        <h6 class="mb-2 pb-1">Gender:</h6>
                                        <div class="form-check form-check-inline custom-form-check-label">
                                            <input class="form-check-input" type="radio" name="gender" id="femaleGender" value="Female" required />
                                            <label class="form-check-label" for="femaleGender">Female</label>
                                        </div>
                                        <div class="form-check form-check-inline custom-form-check-label">
                                            <input class="form-check-input" type="radio" name="gender" id="maleGender" value="Male" required />
                                            <label class="form-check-label" for="maleGender">Male</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-4 pt-2">
                                    <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                                </div>
                                <div class="mt-4 pt-2">
                                    <button type="button" class="btn btn-success d-none" id="bookingBadge">
                                        <span id="bookingBadge" class="badge badge-success ms-2"></span>
                                    </button>
                                </div>
                                <input type="hidden" id="bookingStatus" name="bookingStatus" value="" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- MDB -->
<script
    type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"
></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
<script>
    // Function to update the badge text based on the booking status
    function updateBadge(bookingStatus) {
        const badge = document.getElementById('bookingBadge');
        if (badge) {
            if (bookingStatus) {
                badge.textContent = bookingStatus;
                badge.className = 'btn btn-success'; // Add success styling
                badge.children[0].className = 'badge badge-success ms-2'; // Add success styling to badge text
                badge.classList.remove('d-none'); // Remove 'd-none' to show the badge
            } else {
                // If there's no booking status message, hide the badge
                badge.classList.add('d-none');
            }
        }
    }
    // Call the function to initialize the badge text based on the initial booking status
    const initialBookingStatus = ''; // This value should come from your template engine
    updateBadge(initialBookingStatus);
</script>
</body>
</html>
